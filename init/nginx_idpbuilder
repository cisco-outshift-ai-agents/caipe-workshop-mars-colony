server {
    listen [::]:6101 ssl ipv6only=on;
    listen 6101 ssl;
    ssl_certificate /etc/cert/fullchain.pem;
    ssl_certificate_key /etc/cert/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    root /var/www/html;
    # Ensure Keycloak works behind /keycloak path
    location ^~ /keycloak/ {
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header X-Forwarded-Prefix /keycloak;
        proxy_cookie_domain cnoe.localtest.me $host;
        proxy_cookie_path / /keycloak;
        proxy_pass https://127.0.0.1:8443$request_uri;
        proxy_hide_header Content-Security-Policy;
        add_header Content-Security-Policy "default-src 'self'; frame-src 'self' https://cnoe.localtest.me:8443 https://$host:$server_port; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' data:; " always;
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }

    # Route bare /api/* calls to Backstage which lives at /backstage
    location ^~ /api/ {
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_pass https://127.0.0.1:8443/backstage$request_uri;
        proxy_hide_header Content-Security-Policy;
        add_header Content-Security-Policy "default-src 'self'; frame-src 'self' https://cnoe.localtest.me:8443 https://$host:$server_port; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' data:; " always;
        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }

    location ~ ^/(.*)$ {
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_set_header Host cnoe.localtest.me;
        # Preserve original host/port for upstream apps to build correct URLs
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        # Preserve full path and query string (fixes missing ?env in auth URLs)
        proxy_pass https://127.0.0.1:8443$request_uri;

        # Rewrite cookies set for cnoe.localtest.me to the lab hostname
        proxy_cookie_domain cnoe.localtest.me $host;

        proxy_hide_header Content-Security-Policy;
        add_header Content-Security-Policy "default-src 'self'; frame-src 'self' https://cnoe.localtest.me:8443 https://$host:$server_port; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' data:; " always;

        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }
}
