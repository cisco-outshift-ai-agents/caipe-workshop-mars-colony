server {
    listen [::]:6101 ssl ipv6only=on;
    listen 6101 ssl;
    ssl_certificate /etc/cert/fullchain.pem;
    ssl_certificate_key /etc/cert/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
    root /var/www/html;
    location = /api/app/config {
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_ssl_name cnoe.localtest.me;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Accept-Encoding "";
        proxy_pass https://127.0.0.1:8443;
        sub_filter_once off;
        sub_filter_types application/json;
        sub_filter "https://cnoe.localtest.me:8443" "https://$http_host";
        sub_filter "cnoe.localtest.me:8443" "$http_host";
    }
    location = /api/auth/keycloak-oidc/start {
        # Disable basic auth for OAuth flows
        auth_basic off;

        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_ssl_name cnoe.localtest.me;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass https://127.0.0.1:8443;
        proxy_redirect https://cnoe.localtest.me:8443/ https://$http_host/;
        proxy_redirect https://cnoe.localtest.me/ https://$http_host/;

        # Fix cookie domain to include port and broader path
        proxy_cookie_domain cnoe.localtest.me $http_host;
        proxy_cookie_path /api/auth/keycloak-oidc/handler /api/auth;
    }
    # Keycloak admin console login-status-iframe init requires the origin param to match the canonical host
    location = /keycloak/realms/master/protocol/openid-connect/login-status-iframe.html/init {
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_ssl_name cnoe.localtest.me;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass https://127.0.0.1:8443;
    }
    location = /keycloak/realms/cnoe/protocol/openid-connect/login-status-iframe.html/init {
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_ssl_name cnoe.localtest.me;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass https://127.0.0.1:8443;
    }
    location ^~ /keycloak/ {
        auth_basic off;

        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_ssl_name cnoe.localtest.me;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Accept-Encoding "";
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 16 128k;
        proxy_busy_buffers_size 256k;
        proxy_pass https://127.0.0.1:8443;
        proxy_redirect https://cnoe.localtest.me:8443/ https://$http_host/;
        proxy_redirect https://cnoe.localtest.me/ https://$http_host/;
        proxy_cookie_domain cnoe.localtest.me $http_host;
        proxy_hide_header Content-Security-Policy;

        sub_filter_once off;
        sub_filter_types text/html;
        sub_filter "https://cnoe.localtest.me:8443" "https://$http_host";
        sub_filter "https://cnoe.localtest.me" "https://$http_host";

        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }
    location = /api/auth/keycloak-oidc/handler/frame {
        # Disable basic auth for OAuth flows
        auth_basic off;

        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_ssl_name cnoe.localtest.me;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Accept-Encoding "";
        proxy_set_header Origin https://$http_host;
        proxy_set_header Referer https://$http_host/;
        proxy_pass https://127.0.0.1:8443;

        # Fix cookie domain to include port and broader path
        proxy_cookie_domain cnoe.localtest.me $http_host;
        proxy_cookie_path /api/auth/keycloak-oidc/handler /api/auth;

        # Don't buffer to avoid corruption
        proxy_buffering off;
        proxy_request_buffering off;

        proxy_hide_header Content-Security-Policy;
        sub_filter_once off;
        sub_filter_types text/html;
        sub_filter "https://cnoe.localtest.me:8443" "https://$http_host";
        sub_filter "cnoe.localtest.me:8443" "$http_host";
    }
    location ^~ /api/auth/ {
        # Disable basic auth for OAuth flows
        auth_basic off;

        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_ssl_name cnoe.localtest.me;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Origin https://$http_host;
        proxy_set_header Referer https://$http_host/;
        proxy_pass https://127.0.0.1:8443;

        # Preserve cookies properly
        proxy_cookie_domain cnoe.localtest.me $http_host;
        proxy_cookie_path /api/auth/keycloak-oidc/handler /api/auth;
        proxy_redirect https://cnoe.localtest.me:8443/ https://$http_host/;
        proxy_redirect https://cnoe.localtest.me/ https://$http_host/;

        # Don't buffer to avoid corruption
        proxy_buffering off;
        proxy_request_buffering off;
    }
    location = /ai-platform-engineering {
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_ssl_name cnoe.localtest.me;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Accept-Encoding "";
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 16 128k;
        proxy_busy_buffers_size 256k;
        # Proxy to the backend WITH trailing slash for JSON-RPC
        proxy_pass https://127.0.0.1:8443/ai-platform-engineering/;
        proxy_redirect https://cnoe.localtest.me:8443/ https://$http_host/;
        proxy_redirect https://cnoe.localtest.me/ https://$http_host/;
        proxy_cookie_domain cnoe.localtest.me $http_host;
        proxy_hide_header Content-Security-Policy;

        sub_filter_once off;
        sub_filter_types text/html application/json;
        sub_filter "https://cnoe.localtest.me:8443" "https://$http_host";
        sub_filter "cnoe.localtest.me:8443" "$http_host";

        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }
    location ^~ /ai-platform-engineering/ {
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_ssl_name cnoe.localtest.me;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Accept-Encoding "";
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 16 128k;
        proxy_busy_buffers_size 256k;
        # Fix: proxy to backend WITH trailing slash to match
        proxy_pass https://127.0.0.1:8443/ai-platform-engineering/;
        proxy_redirect https://cnoe.localtest.me:8443/ https://$http_host/;
        proxy_redirect https://cnoe.localtest.me/ https://$http_host/;
        proxy_cookie_domain cnoe.localtest.me $http_host;
        proxy_hide_header Content-Security-Policy;

        sub_filter_once off;
        sub_filter_types text/html application/json;
        sub_filter "https://cnoe.localtest.me:8443" "https://$http_host";
        sub_filter "cnoe.localtest.me:8443" "$http_host";

        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }
    location ~ ^/(.*)$ {
        proxy_http_version 1.1;
        proxy_ssl_server_name on;
        proxy_ssl_name cnoe.localtest.me;
        proxy_set_header Host cnoe.localtest.me;
        proxy_set_header X-Forwarded-Host $http_host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Accept-Encoding "";
        proxy_buffering on;
        proxy_buffer_size 128k;
        proxy_buffers 16 128k;
        proxy_busy_buffers_size 256k;
        proxy_pass https://127.0.0.1:8443/$1$is_args$args;
        # Rewrite upstream redirects from cnoe.localtest.me:8443 back to the lab URL/port
        proxy_redirect https://cnoe.localtest.me:8443/ https://$http_host/;
        proxy_redirect https://cnoe.localtest.me/ https://$http_host/;
        proxy_cookie_domain cnoe.localtest.me $http_host;

        proxy_hide_header Content-Security-Policy;
        sub_filter_once off;
        sub_filter_types text/html application/json;
        sub_filter "https://cnoe.localtest.me:8443" "https://$http_host";
        sub_filter "cnoe.localtest.me:8443" "$http_host";

        proxy_read_timeout 86400s;
        proxy_send_timeout 86400s;
    }
}